{
  "name": "lakutata",
  "version": "0.2.1-proto.3",
  "description": "An IoC-based universal application framework.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/Lakutata.js",
      "types": "./src/Lakutata.d.ts"
    },
    "./orm": {
      "import": "./src/lib/core/ORM.js",
      "types": "./src/lib/core/ORM.d.ts"
    },
    "./decorator/asst": "./src/decorators/asst",
    "./decorator/ctrl": "./src/decorators/ctrl",
    "./decorator/di": "./src/decorators/di",
    "./decorator/dto": "./src/decorators/dto",
    "./decorator/orm": "./src/decorators/orm",
    "./function": {
      "import": "./src/lib/functions/*.js",
      "types": "./src/lib/functions/*.d.ts"
    },
    "./interface": {
      "import": "./src/interfaces/*.js",
      "types": "./src/interfaces/*.d.ts"
    },
    "./type": {
      "import": "./src/types/*.js",
      "types": "./src/types/*.d.ts"
    },
    "./tsconfig.json": "./tsconfig.json",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "shx rm -rf ./distro",
    "build:js": "node rollup.js",
    "rebuild": "npm run clean && npm run build:js",
    "prepare": "npm run compile",
    "compile": "npm run rebuild",
    "publish": "npm run compile && node publish.js",
    "release": "dotenv -- release-it --git.tagExclude='*[-]*' && npm run publish",
    "release:beta-release": "dotenv -- release-it --preRelease=beta && npm run publish",
    "release:alpha-release": "dotenv -- release-it --preRelease=alpha --no-github.release && npm run publish",
    "release:proto-release": "dotenv -- release-it --preRelease=proto --no-github.release --no-git.tag && npm run publish",
    "test:app": "npm run rebuild && node distro/src/tests/App.spec.js",
    "test:unit": "npm run rebuild && mocha distro/src/tests/UnitTest.spec.js"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "requireCleanWorkingDir": true,
      "requireBranch": false,
      "commitMessage": "chore: release v${version}",
      "push": false
    },
    "github": {
      "release": true,
      "autoGenerate": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/crypto-js": "^4.2.2",
    "@types/is-glob": "^4.0.4",
    "@types/node": "^20.11.16",
    "@types/object-hash": "^3.0.6",
    "@types/rollup-plugin-progress": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "chalk": "^5.3.0",
    "cli-spinners": "^2.9.2",
    "commander": "^12.0.0",
    "cron-validator": "^1.3.1",
    "crypto-js": "^4.2.0",
    "dotenv-cli": "^7.4.1",
    "dts-bundle-generator": "^9.3.1",
    "eslint": "^8.56.0",
    "eventemitter2": "^6.4.9",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fast-xml-parser": "^4.3.4",
    "fastify": "^4.26.2",
    "glob": "^10.3.10",
    "html-tags": "^3.3.1",
    "is-glob": "^4.0.3",
    "joi": "^17.12.2",
    "joi-to-json": "^4.2.1",
    "jsonschema": "^1.4.1",
    "log-update": "^6.0.0",
    "mocha": "^10.3.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "object-hash": "^3.0.0",
    "patrun": "^7.2.5",
    "reflect-metadata": "^0.2.1",
    "release-it": "^17.1.1",
    "rollup": "^4.12.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-progress": "^1.1.2",
    "shx": "^0.3.4",
    "socket.io": "^4.7.5",
    "tslib": "^2.6.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.3.3",
    "unset-value": "^2.0.1"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "alex.ma",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lakutata/lakutata.git"
  },
  "homepage": "https://lakutata.com",
  "bugs": {
    "url": "https://github.com/lakutata/lakutata/issues",
    "email": "admin@lakutata.com"
  },
  "keywords": [
    "lakutata",
    "framework",
    "typescript"
  ]
}
