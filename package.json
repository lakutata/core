{
  "name": "lakutata",
  "version": "0.2.0",
  "description": "An IoC-based universal application framework.",
  "type": "module",
  "main": "build/src/tests/App.spec.js",
  "scripts": {
    "clean": "shx rm -rf ./build",
    "build:js": "rollup -c",
    "build:gyp": "node-gyp configure build",
    "rebuild": "npm run clean && npm run build:js",
    "prepare": "npm run compile",
    "compile": "npm run rebuild",
    "test": "npm run rebuild && node distro/src/tests/App.spec.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
