    "@swc/core": "^1.3.107",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "bindings": "^1.5.0",
    "crypto-js": "^4.2.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "node-addon-api": "^7.1.0",
    "reflect-metadata": "^0.2.1",
    "rollup": "^4.9.6",
    "rollup-plugin-copy": "^3.5.0",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
