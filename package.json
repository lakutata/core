{
  "name": "lakutata",
  "version": "0.2.0",
  "description": "An IoC-based universal application framework.",
  "type": "module",
  "main": "build/src/tests/App.spec.js",
  "scripts": {
    "clean": "shx rm -rf ./distro",
    "build:js": "rollup --silent -c",
    "build:gyp": "node-gyp configure build",
    "rebuild": "npm run clean && npm run build:js",
    "prepare": "npm run compile",
    "compile": "npm run rebuild",
    "test:app": "npm run rebuild && node distro/src/tests/App.spec.js",
    "test:unit": "npm run rebuild && mocha distro/src/tests/UnitTest.spec.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-esm-shim": "^0.1.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.4.2",
    "@types/crypto-js": "^4.2.2",
    "@types/is-glob": "^4.0.4",
    "@types/node": "^20.11.16",
    "@types/object-hash": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "commander": "^12.0.0",
    "cron-validator": "^1.3.1",
    "crypto-js": "^4.2.0",
    "eslint": "^8.56.0",
    "eventemitter2": "^6.4.9",
    "fast-glob": "^3.3.2",
    "fast-xml-parser": "^4.3.4",
    "fastify": "^4.26.2",
    "glob": "^10.3.10",
    "html-tags": "^3.3.1",
    "is-glob": "^4.0.3",
    "joi": "^17.12.2",
    "mocha": "^10.3.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "node-addon-api": "^7.1.0",
    "object-hash": "^3.0.0",
    "patrun": "^7.2.5",
    "reflect-metadata": "^0.2.1",
    "rollup": "^4.12.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-progress": "^1.1.2",
    "shx": "^0.3.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "alex.ma",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lakutata/lakutata.git"
  },
  "homepage": "https://lakutata.com",
  "bugs": {
    "url": "https://github.com/lakutata/lakutata/issues",
    "email": "admin@lakutata.com"
  },
  "keywords": [
    "lakutata",
    "framework",
    "typescript"
  ]
}
